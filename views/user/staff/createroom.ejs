<body>
  <div class='container-fluid'>
  <div class='row vh-100'>
    <div class='col-sm-2 h-100 bg-light'>
      <div style="margin-top:25%;">
        <nav class="nav nav-pills nav-fill flex-column">
        <a class="nav-link" href="/staffDash">Dashboard</a>
        <a class="nav-link active" href="/staff">Room Booking</a>
        <a class="nav-link disabled" href="#">Student Consultation</a>
        <a class="nav-link disabled" href="#">Timetable</a>
      </nav>
      </div>
    </div>
      <div class='col-sm-8 content border'>
        <div class="row justify-content-center">
          <div class="col-md-4 mb-4 contents">
          <h3>Create a new room</h3>
                <%- include('../../../views/partials/messages.ejs') %>
            <form action="/createroom" method="post">
              <div class="form-control">
                <label for="block">Choose a Block:</label>
                <select id="block" name="block">
                  <option value="A">Block A</option>
                  <option value="B">Block B</option>
                  <option value="C">Block C</option>
                  <option value="D">Block D</option>
                  <option value="E">Block E</option>
                  <option value="F">Block F</option>
                  <option value="G">Block G</option>
                  <option value="H">Block H</option>
                </select>
              </div>
              <div class="form-group">
                <label for="level">Level</label>
                <input
                type="number"
                class="form-control"
                name="level"
                id="level"
                required
                />
            </div> <div class="form-group">
              <label for="unit">Unit Name</label>
              <input
              type="text"
              class="form-control"
              name="unit"
              id="unit"
              required
              />
          </div>
              <div class="form-group">
                  <label for="roomCapacity">Capacity</label>
                  <input
                  type="number"
                  class="form-control"
                  name="roomCapacity"
                  id="roomCapacity"
                  required
                  />
              </div>

              <div class="form-group">
                <label for="price">Price</label>
                <input
                type="text"
                class="form-control"
                name="price"
                id="price"
                required
                />
              </div>

              <div class="form-group">
                <label for="promotionalCode">Promotional Code</label>
                <input
                type="text"
                class="form-control"
                name="promotionalCode"
                id="promotionalCode"
                />
              </div>
              <div>
              <br>
              Launch room on Creation?
              <br>
              <label>
                <input id="launchTrue"onclick="img(0)" class="form-switch" type="radio" name="launchStatus" value="true" >
                  Yes
              </label>
              <label>
                <input id="launchFalse" onclick="img(1)"class="form-switch" checked type="radio"name="launchStatus" value="false" >
                  No
              </label>
              </div>
                 <!-- <div>
                    <label for="timeslot">Choose a timeslot:</label>
                   <select name="timeslot" id="role">
                     <option value="0800-1000">0800-1000</option>
                     <option value="1000-1200">1000-1200</option>
                     <option value="1300-1500">1200-1400</option>
                     <option value="1500-1700">1400-1600</option>
                     <option value="1600-1800">1600-1800</option>
                     <option value="1800-2000">1800-2000</option>
                     <option value="2000-2200">2000-2200</option>
                   </select>
                  </div>-->

                <div class="launch row" id="launchgroup">
                  <div class="col-12">
                    <h5>Date</h5>
                  </div>

                    <div class="col">
                      From
                      <div class="form-group">
                        <label for="launchstartdate"></label>
                        <input
                        type="date"
                        class="form-control"
                        name="launchstartdate"
                        id="launchstartdate"
                        min="2022-01-01"
                        max="2099-12-31"
                        />
                      </div>
                    </div>

                    <div class="col">
                      To
                      <div class="form-group">
                        <label for="launchenddate"></label>
                        <input
                        type="date"
                        class="form-control"
                        name="launchenddate"
                      id="launchenddate"
                      min="2022-01-01"
                      max="2099-12-31"
                      />
                    </div>
                  </div>

                  <div class="col-12">
                    <h5>Duration</h5>
                  </div>

                  <div class="col">
                    <label for="timeslot">Timeslot from</label>
                    <input type="time" min="08:00:00" max="18:00:00" name= "openinghour"value="openinghour" >
                    to
                    <input type="time" min="08:00:00" max="18:00:00" name="closinghour" value="closinghour" >
                  </div>
                </div>
                <br>
                <input type="submit" value="Create Room" class="btn btn-block btn-primary">
              </div>
            </form>
          </div>
          </div>
        </div>
        <div class='col-2 h-100 bg-light'>
        </div>
      </div>
    </div>

    <script>
      function img(x)
      {if(x==0)
        document.getElementById('launchgroup').style.display='flex'
        else
        document.getElementById('launchgroup').style.display='none'
       return


      }
    </script>
