<script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.11.1/js/dataTables.bootstrap5.min.js"></script>

<script type="text/javascript" class="init">

$(document).ready(function() {
  // Create a new DataTable object
  table = $('#example').DataTable({


"lengthMenu": [ [15, 50, 100, -1], [15, 50, 100, "All"] ],
"pagingType": "simple",
scrollY: 400,
select: true,

scrollCollapse: true,
order: [[ 1, 'asc' ]],
ajax: {
  url: '/userData',
},
columns: [
    { data: '_id',
         visible: false, },
    { data: 'fullname' },
    { data: 'userID' },
    { data: 'email' },
    { data: 'hashedpassword' },
    { data: 'role'},
    { data: 'lastlogin'},
    { data: 'lastlogout'},
    { data: 'date'}
  ]
})


$('#example tbody').on('click', 'tr', function () {
           var data = table.row(this).data();

           if ($(this).hasClass('selected')) {
               $(this).removeClass('selected');
           } else {
               table.$('tr.selected').removeClass('selected');
               $(this).addClass('selected');

      var obtainfullname = data.fullname
      var obtainuserid  = data.userID
      var obtainemail  = data.email
      var obtainrole = data.role

      localStorage.setItem('fullname-ID',obtainfullname)
      localStorage.setItem('user-ID',obtainuserid)
      localStorage.setItem('email-ID',obtainemail)
      localStorage.setItem('role-ID',obtainrole)


        }

    });


});




</script>

