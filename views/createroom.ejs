            <div class="row justify-content-center">
              <div class="col-md-4 contents">
                <div class="mb-4">
                <h3>Create a new room</h3>

                <%- include('./partials/messages.ejs') %>
              <form action="/createroom" method="post">


                <div class="form-group">
                  <label for="roomID">Room ID</label>
                  <input
                  type="text"
                  class="form-control"
                  name="roomID"
                  id="roomID"
                  required
                 />

                </div>

                <div class="form-group">
                    <label for="roomCapacity">Capacity</label>
                    <input
                    type="number"
                    class="form-control"
                    name="roomCapacity"
                    id="roomCapacity"
                    required
                   />

                  </div>   <div class="form-group">
                    <label for="price">Price</label>
                    <input
                    type="text"
                    class="form-control"
                    name="price"
                    id="price"
                    required
                   />

                  </div>  <div class="form-group">
                    <label for="promotionalCode">Promotional Code</label>
                    <input
                    type="text"
                    class="form-control"
                    name="promotionalCode"
                    id="promotionalCode"
                   />

                  </div>
                  <div>
                    <br>
                    Launch room on Creation?
                    <br>
                    <label>
                      <input id="launchTrue"onclick="img(0)" class="form-switch" type="radio" name="launchStatus" value="true" >
                      Yes
                    </label>
                    <label>
                      <input id="launchFalse" onclick="img(1)"class="form-switch" checked type="radio"name="launchStatus" value="false" >
                      No
                    </label>
                  </div>
                 <!-- <div>
                    <label for="timeslot">Choose a timeslot:</label>
                   <select name="timeslot" id="role">
                     <option value="0800-1000">0800-1000</option>
